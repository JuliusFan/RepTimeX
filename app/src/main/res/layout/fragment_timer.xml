<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="RoutineName"
        android:layout_marginTop="40dp"
        android:id="@+id/routine_title"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/routine_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/btnNavFrag2"
        android:text="@string/menu_about"/>


    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="10:00"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/countdown_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/countdown"
        android:layout_centerHorizontal="true"
        android:text="@string/button_start_training" />


    <TextView
        android:id="@+id/current_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/countdown"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Current Exercise: [placeholder]" />


    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_above="@id/current_exercise"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-61dp" />


</RelativeLayout>